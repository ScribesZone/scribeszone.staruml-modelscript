{
    "id": "useocl",
    "name": "ModelScript",
    "schema": {
        "useocl.generation": {
            "text": "ModelScript",
            "type": "section"
        },
        "useocl.generation.layout": {
            "text": "Directory layout for generated artefacts",
            "description": "Defines in which directory modelscript files are generated.",
            "type": "dropdown",
            "options": [
                {
                    "value": "0",
                    "text": "build/*"
                },
                {
                    "value": "1",
                    "text": "./*"
                },
                {
                    "value": "2",
                    "text": "modelscript"
                }
            ],
            "default": 1
        },
        "useocl.generation.debug": {
            "text": "Debug code generator",
            "description": "Produce more messages on the DevTools console during code generation",
            "type": "check",
            "default": true
        },

        "useocl.compilation": {
            "text": "USE OCL Compilation (post-generation)",
            "type": "section"
        },
        "useocl.compilation.compile": {
            "text": "Compilation",
            "description": "Compile generated code. Check Yes only if USE OCL is installed.",
            "type": "check",
            "default": true
        },
        "useocl.compilation.use.path": {
            "text": "USE OCL path",
            "description": "Path to the 'use' command. Can be just 'use'.",
            "type": "string",
            "default": "use"
        },
        "useocl.compilation.debug": {
            "text": "Debug compilation processor",
            "description": "Produce more messages on the DevTools console during code compilation",
            "type": "check",
            "default": true
        }
    }
}